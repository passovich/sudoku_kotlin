<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bigItemLightBack" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">25dp</item>
        <item name="android:background">@color/bgLightColor</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="bigItemGrayBack" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">25dp</item>
        <item name="android:background">@color/bgGrayColor</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:clickable">true</item>
    </style>



    <style name="subTableLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:background">@color/bgLightColor</item>
    </style>

    <style name="subTableGray" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:background">@color/bgGrayColor</item>
    </style>

    <style name="subTableRow" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:weightSum">1.2</item>
        <item name="android:layout_height">11dp</item>
    </style>

    <style name="subTableItemLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">#413F3F</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subTableItemGray" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">#413F3F</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="buttonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:alpha">0.7</item>

    </style>





    <style name="subTableItem" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">#413F3F</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bigItem" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">25dp</item>
        <item name="android:background">@color/bgLightColor</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:clickable">true</item>
    </style>
</resources>

